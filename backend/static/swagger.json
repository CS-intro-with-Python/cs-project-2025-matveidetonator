{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Tarot API",
    "description": "API for working with Tarot card spreads"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/api/tarot/spread/{kind}": {
      "get": {
        "summary": "Get a Tarot card spread",
        "parameters": [
          {
            "name": "kind",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Type of spread (three, five, ten)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "object",
              "properties": {
                "cards": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "orientation": { "type": "string" },
                      "meaning_upright": { "type": "string" },
                      "meaning_reversed": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  }
}